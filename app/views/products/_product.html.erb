<article class="product">
  <header>
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
  </header>
  <p class="description">
    <%= product.description %>
  </p>

  <!--  Stars for ratings  -->
  <% if product.rating_avg %>
    <% r = product.rating_avg.to_i %>

    <% (0..r-1).each do %>
      <span class="glyphicon glyphicon-star" style="color: #ffbf00"></span>
    <% end %>
    <% (r..4).each do %>
      <span class="glyphicon glyphicon-star-empty" style="color: #ffbf00"></span>
    <% end %>
    <% else %>
    <span style="font-style: italic">No ratings yet</span>
    <% end %>

  <footer class="actions">
    <%= link_to increase_item_qty_cart_path(product_id: product.id), class: 'btn btn-primary', method: :put do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
    <%= link_to product, class: 'btn btn-default pull-right' do %>
      Details &raquo;
    <% end %>
  </footer>

  <aside class="price">
    <%= humanized_money_with_symbol product.price %>
  </aside>

  <% if product.quantity > 0 %>
  <aside class="qty">
    <%= product.quantity %> left
  </aside>
  <% else %>
  <aside class="sold-out">
    SOLD OUT!
  </aside>
  <% end %>
</article>
